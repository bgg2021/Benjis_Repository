<CustBoxLayout@BoxLayout>:

<FormLayout>:
    orientation: "vertical"
    format: format
    my_font: "Pacifico.ttf"
    my_text: "Format Me"
    slider1: slider1
    slider2: slider2
    slider3: slider3





    CustBoxLayout:

        orientation: "vertical"
        Label:
            id: format
            text: root.my_text
            font_size: 20
            font_name: root.my_font
        Spinner:
            id: spin
            text: "Font 1"
            values: ["Pacifico.ttf", "Walkway_Black.ttf"]
            on_text: root.format.font_name = self.text

    CustBoxLayout:

        Label
            text: "Francis"
        CheckBox:
            group: "radio_buttons"
            on_active: root.format.text = "Francis"

        Label:
            text: "Parker"
        CheckBox:
            group: "radio_buttons"
            on_active: root.format.text = "Parker"

        Label:
            text: "School"
        CheckBox:
            group: "radio_buttons"
            on_active: root.format.text = "School"

    CustBoxLayout:

        Label:
            text: "Red"
        Slider:
            id: slider1
            min: 0
            max: 1
            step: 0.01
            value: 0
            slider_value: root.color_slide(self.value, slider2.value, slider3.value)

        Label:
            text: "Green"
        Slider:
            id: slider2
            min: 0
            max: 1
            step: 0.01
            value: 0
            #slider_value: root.color_slide()

        Label:
            text: "Blue"
        Slider:
            id: slider3
            min: 0
            max: 1
            step: 0.01
            value: 0
            #slider_value: root.color_slide()

    CustBoxLayout:
        Label:
            text: "Change Text Color (White/Black)"
        Switch:
            on_active: root.color_switch(self.active)
