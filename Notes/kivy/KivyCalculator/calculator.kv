<CustBoxLayout@BoxLayout>:
    size_hint_y: 1
    spacing: 0
    size_hint_y: 1

<CustButton@Button>:
    font_size: 30
    background_normal: ""
    background_color: 0.85, 0.85, 0.85, 1
    color: 0, 0, 0, 1 # foreground color
    canvas:
        Color:
            rgba: (0, 0, 0, 1)
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height

<OrangeButton@CustButton>:
    background_color: 1, 0.5, 0, 1
    color: 1, 1, 1, 1

<CalculatorLayout>:
    display: display
    orientation: "vertical"
    spacing: 1
    TextInput:
        id: display
        font_size: 36
        background_normal: ""
        background_color: 0.7, 0.7, 0.7, 1

    CustBoxLayout:
        CustButton:
            text: "AC"
            on_press: root.clear()
        CustButton:
            text: "("
            on_press: display.text += self.text
        CustButton:
            text: ")"
            on_press: display.text += self.text
        OrangeButton:
            text: "/"
            on_press: display.text += self.text

    CustBoxLayout:
        CustButton:
            text: "7"
            on_press: display.text += self.text
        CustButton:
            text: "8"
            on_press: display.text += self.text
        CustButton:
            text: "9"
            on_press: display.text += self.text
        OrangeButton:
            text: "*"
            on_press: display.text += self.text

    CustBoxLayout:
        CustButton:
            text: "4"
            on_press: display.text += self.text
        CustButton:
            text: "5"
            on_press: display.text += self.text
        CustButton:
            text: "6"
            on_press: display.text += self.text
        OrangeButton:
            text: "-"
            on_press: display.text += self.text

    CustBoxLayout:
        CustButton:
            text: "1"
            on_press: display.text += self.text
        CustButton:
            text: "2"
            on_press: display.text += self.text
        CustButton:
            text: "3"
            on_press: display.text += self.text
        OrangeButton:
            text: "+"
            on_press: display.text += self.text

    CustBoxLayout:
        CustButton:
            text: "0"
            size_hint_x: 2
            on_press: display.text += self.text
        CustButton:
            text: "."
            on_press: display.text += self.text
        OrangeButton:
            text: "="
            on_press: root.calculate(display.text)